<link rel="stylesheet" type="text/css" href="/css/user-action.css" />
<div class="container d-flex align-items-center justify-content-center">
  <div class="row">
    <div class="col box">
      <h4 class="fw-bold">Welcome to Traditional Games</h4>
      <h5>Create account</h5>
      <p class="text-muted">Please insert your personal information</p>
      <% if (typeof message != 'undefined') { %>
      <div class="alert <%= messageClass %>" role="alert"><%= message %></div>
      <% } %> <% if (typeof errors != 'undefined') { %>
      <div
        class="alert alert-danger"
        style="padding: 5px 0 !important; width: 100% !important"
        role="alert"
      >
        <ul class="m-0">
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/user/register">
        <div class="mb-3 form">
          <input
            type="text"
            class="form-control"
            id="firstName"
            placeholder="First name"
            name="firstName"
            required
          />
        </div>
        <div class="mb-3 form">
          <input
            type="text"
            class="form-control"
            id="lastName"
            placeholder="Last Name"
            name="lastName"
            required
          />
        </div>
        <div class="mb-3 form">
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Email address"
            name="email"
            required
          />
        </div>
        <div class="mb-3 form">
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="Password"
            name="password"
            required
          />
        </div>
        <div class="mb-3 form">
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="Re-enter your password"
            name="confirmPassword"
            required
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary w-100"
          style="border-radius: 10px"
        >
          Submit
        </button>
        <div
          class="to-login d-flex align-items-center justify-content-center mt-3"
        >
          <p class="text-muted mb-0 me-2">Already have an account?</p>
          <a href="/user/login" class="fw-bold text-decoration-none">Log In</a>
        </div>
      </form>
    </div>
  </div>
</div>
