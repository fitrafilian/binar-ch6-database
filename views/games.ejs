<link rel="stylesheet" href="css/games.css" />
<main>
  <div class="nav">
    <div class="container wrapper">
      <% if (typeof user != 'undefined') { %>
      <div class="back-wrapper d-flex justify-content-center align-items-center">
        <a href="/user"><img src="img-suwit-jawa/back.png" alt="Back" class="back" /></a>
      </div>
      <% } else {%>
      <div class="back-wrapper d-flex justify-content-center align-items-center">
        <a href="/user"><img src="img-suwit-jawa/back.png" alt="Back" class="back" /></a>
      </div>
      <% } %>
      <img src="img-suwit-jawa/logo 1.png" alt="Logo" class="logo" />
      <span>ROCK PAPER SCISSOR</span>
    </div>
  </div>
  <div class="main-wrapper">
    <div class="main">
      <div class="container">
        <div class="row justify-content-center align-items-center">
          <div class="col col-sm-3 col-md-3 col-lg-3 flex-column justify-content-center" id="player" align="center">
            <p class="text-center">player</p>
            <div>
              <button class="box box-rock">
                <img src="img-suwit-jawa/rock.png" alt="rock" class="rock" />
              </button>
            </div>
            <div>
              <button class="box box-paper">
                <img src="img-suwit-jawa/paper.png" alt="paper" class="paper" />
              </button>
            </div>
            <div>
              <button class="box box-scissor">
                <img src="img-suwit-jawa/scissor.png" alt="scissor" class="scissor" />
              </button>
            </div>
          </div>
          <div class="col col-sm-5 col-md-5 col-lg-3" align="center">
            <div class="panel">vs</div>
          </div>
          <div class="col col-sm-3 col-md-3 col-lg-3 flex-column justify-content-center computer" id="computer" align="center">
            <p class="text-center">computer</p>
            <div class="box box-rock">
              <img src="img-suwit-jawa/rock.png" alt="rock" class="rock" />
            </div>
            <div class="box box-paper">
              <img src="img-suwit-jawa/paper.png" alt="paper" class="paper" />
            </div>
            <div class="box box-scissor">
              <img src="img-suwit-jawa/scissor.png" alt="scissor" class="scissor" />
            </div>
          </div>
        </div>
        <div class="row justify-content-center refresh m-auto">
          <img src="img-suwit-jawa/refresh.png" alt="Refresh" />
        </div>
      </div>
    </div>
    <!-- <div class="refresh">
          <div class="container">
            <div class="row justify-content-center">
              <img src="img-suwit-jawa/refresh.png" alt="Refresh" />
            </div>
          </div>
        </div> -->
  </div>
</main>

<script src="js/games.js"></script>
